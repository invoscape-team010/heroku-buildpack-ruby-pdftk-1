
#!/usr/bin/env bash
# bin/compile <build-dir> <cache-dir>

echo "-----> Installing PDFTK"

# change to the the BUILD_DIR ($1)
cd $1/bin

# download the mruby binary (-O) silently (-s)
package="https://s3.amazonaws.com/jrbuildings/pdftk"

curl $package -s -O

cd $1/lib

package2="https://s3.amazonaws.com/jrbuildings/libgcj.so.12"

curl $package2 -s -O

# make a directory to untar (like unzip) the binary
# mkdir -p pdftk
# ls
# untar the binary to the directory we want
# tar -C pdftk -xvf pdftk.tar.gz